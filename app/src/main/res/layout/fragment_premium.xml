<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PremiumFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/wellcome_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="222dp"
        android:layout_height="174dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/image"
        app:layout_constraintBottom_toTopOf="@id/welcome_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view" />

    <LinearLayout
        android:id="@+id/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:background="@drawable/wellcome_screen_shape"
        android:orientation="vertical"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/millions_of_users_choice"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/premium_fragment_text"
            android:textSize="16sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iv_tick1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/tick_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/open_sans"
                android:text="Professional videos with coatches"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_tick1"
                app:layout_constraintStart_toEndOf="@id/iv_tick1"
                app:layout_constraintTop_toTopOf="@id/iv_tick1" />

            <ImageView
                android:id="@+id/iv_tick2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/tick_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tick1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/open_sans"
                android:text="Over 100 ready-made workouts"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_tick2"
                app:layout_constraintStart_toEndOf="@id/iv_tick2"
                app:layout_constraintTop_toTopOf="@id/iv_tick2" />

            <ImageView
                android:id="@+id/iv_tick3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/tick_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tick2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/open_sans"
                android:text="Create your personal training plan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_tick3"
                app:layout_constraintStart_toEndOf="@id/iv_tick3"
                app:layout_constraintTop_toTopOf="@id/iv_tick3" />

            <ImageView
                android:id="@+id/iv_tick4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/tick_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_tick3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/open_sans"
                android:text="Create your personal training plan"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_tick4"
                app:layout_constraintStart_toEndOf="@id/iv_tick4"
                app:layout_constraintTop_toTopOf="@id/iv_tick4" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="171dp"
                android:layout_height="104dp"
                android:background="@drawable/shape_price"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Monthly"
                    android:textColor="#461B93"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="5,99$"
                    android:textColor="#461B93"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="per month"
                    android:textColor="#404B52"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="171dp"
                android:layout_height="104dp"
                android:background="@drawable/shape_price"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Monthly"
                    android:textColor="#461B93"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="5,99$"
                    android:textColor="#461B93"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="per month"
                    android:textColor="#404B52"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/start_training"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="Eget nunc scelerisque viverra mauris in aliquam sem fringilla "
            android:textColor="#404B52"
            android:textSize="12sp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>