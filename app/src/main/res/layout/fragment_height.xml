<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".HeightFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow_24"/>

        <TextView
            android:layout_width="261dp"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="step 4 of 8"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#461B93"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:textColor="#404B52"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Select height"
        android:textColor="#0A0615"
        android:textSize="27sp" />

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_edit_text"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="Feet"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#0A0615"
            android:textSize="14sp" />

        <TextView
            android:background="@drawable/shape_edit_text_centimeter"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="Centimetre"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#0A0615"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="48dp"
        android:layout_gravity="center">

        <EditText
            android:layout_width="97dp"
            android:layout_height="64dp"
            android:inputType="text"
            android:paddingStart="12dp"
            android:gravity="center"
            android:background="@drawable/shape_verification_code"
            tools:ignore="Autofill,RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="cm"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:textColor="#0A0615"
            android:textSize="16sp" />
        
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/gender_continue"
        android:layout_marginTop="100dp"
        android:textSize="17sp" />


</LinearLayout>